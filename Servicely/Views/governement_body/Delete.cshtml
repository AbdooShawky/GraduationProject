@model Servicely.Models.governement_body

@{
    ViewBag.Title = @Servicely.Languages.Language.Delete;
    if (Session["Layout"] != null)
        Layout = Session["Layout"].ToString(); 
    else
       Layout = "~/Views/Shared/_Layout.cshtml"; 
}

<h2>@Servicely.Languages.Language.Delete</h2>

<h3>@Servicely.Languages.Language.Are_you_sure_you_want_to_delete_this_</h3>
<div>
    <h4>@Servicely.Languages.Language.governement_body</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Servicely.Languages.Language.governement_name
        </dt>
        @if (Session["lang"] != null)
        {
            if (Session["lang"].ToString().Equals("ar-EG"))
            {

                <dd>
                    @Html.DisplayFor(model => model.governement_name_arabic)
                </dd>
            }
            else
            {
                <dd>
                    @Html.DisplayFor(model => model.governement_name)
                </dd>
            }
        }
        else
        {
            <dd>
                @Html.DisplayFor(model => model.governement_name)
            </dd>
        }


        <dt>
            @Servicely.Languages.Language.start_time
        </dt>

        <dd>
            @Html.DisplayFor(model => model.start_time)
        </dd>

        <dt>
            @Servicely.Languages.Language.end_time
        </dt>

        <dd>
            @Html.DisplayFor(model => model.end_time)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value=@Servicely.Languages.Language.Delete class="btn btn-default" /> |
            @Html.ActionLink(@Servicely.Languages.Language.Back_to_List, "Index")
        </div>
    }
</div>
