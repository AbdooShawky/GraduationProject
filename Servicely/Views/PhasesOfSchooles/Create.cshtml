@model Servicely.Models.PhasesOfSchoole

@{
    ViewBag.Title = "Create";
       if (Session["Layout"] != null)
    { Layout = Session["Layout"].ToString(); }

    else
    { Layout = "~/Views/Shared/_Layout.cshtml"; }
}

<h3>@Servicely.Languages.Language.Create</h3>
<h4>@Servicely.Languages.Language.PhasesOfSchool</h4>
<div class="container">
    @using (Html.BeginForm())
    {

        <hr />
        <div class="row">
            <div class="col-md-3">
                <label>@Servicely.Languages.Language.PhaseName</label>
                @Html.EditorFor(model => model.PhaseName, new { htmlAttributes = new { @class = "form-control", required = "required", pattern = "(([A-Za-z\\s]){2,25})" } })
                @Html.ValidationMessageFor(model => model.PhaseName, "", new { @class = "text-danger" })

            </div>
            <div class="col-md-1"></div>
            <div class="col-md-3">
                <label>@Servicely.Languages.Language.PhaseNameAr</label>
                @Html.EditorFor(model => model.PhaseNameArabic, new { htmlAttributes = new { @class = "form-control", required = "required", pattern = "([\u0600-\u06FF\\s]{3,20})" } })
                @Html.ValidationMessageFor(model => model.PhaseNameArabic, "", new { @class = "text-danger" })

            </div>
        </div>
        <div class="row mt-3">
            <div class="col-md-3">
                <label>@Servicely.Languages.Language.HowManyYear</label>
                @Html.TextBoxFor(a => a.Year, new { @class = "form-control", required = "required", type = "number", max = "6", min = "1" })
            </div>
        </div>


        <div class="form-group mt-4">
            @if (ViewBag.errPhase != null)
            {
                <label class="mt-3 mb-3 text-danger"> @ViewBag.errPhase</label>
            }
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@Servicely.Languages.Language.Create" class="btn btn-default" />
            </div>
        </div>

    }

    <div>
        @Html.ActionLink(Servicely.Languages.Language.Back_to_List, "Index")
    </div>

    <div>

    </div>
</div>
