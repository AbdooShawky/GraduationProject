@model Servicely.Models.School

@{
    ViewBag.Title = "Delete";
       if (Session["Layout"] != null)
    { Layout = Session["Layout"].ToString(); }

    else
    { Layout = "~/Views/Shared/_Layout.cshtml"; }
}

    <h3>   @Servicely.Languages.Language.Delete</h3>
    <h4>   @Servicely.Languages.Language.School</h4>
<h4>@Servicely.Languages.Language.Are_you_sure_you_want_to_delete_this_</h4>
<div>

    <hr />
    <dl class="dl-horizontal">



        @if (Session["lang"] != null)
        {
            if (Session["lang"].ToString().Equals("ar-EG"))
            {

                <dt>
                    @Servicely.Languages.Language.SchoolName
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.SchoolNameArabic)
                </dd>

                <dt>
                    @Servicely.Languages.Language.SchoolType
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.KindOfSchool.KindOfSchollNameArabic)
                </dd>
            }
            else
            {
                <dt>
                    @Servicely.Languages.Language.SchoolName
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.SchoolName)
                </dd>



                <dt>
                    @Servicely.Languages.Language.SchoolType
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.KindOfSchool.KindOfSchollName)
                </dd>
            }
        }
        else
        {
            <dt>
                @Servicely.Languages.Language.SchoolName
            </dt>

            <dd>
                @Html.DisplayFor(model => model.SchoolName)
            </dd>



            <dt>
                @Servicely.Languages.Language.SchoolType
            </dt>

            <dd>
                @Html.DisplayFor(model => model.KindOfSchool.KindOfSchollName)
            </dd>

        }



    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="@Servicely.Languages.Language.Delete" class="btn btn-default" /> |
            @Html.ActionLink(Servicely.Languages.Language.Back_to_List, "Index")
        </div>
    }
</div>
