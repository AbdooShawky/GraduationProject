@model IEnumerable<Servicely.Models.RealStateRegistryInterest>

@{
    ViewBag.Title = "Index";
        if (Session["Layout"] != null)
    { Layout = Session["Layout"].ToString(); }

    else
    { Layout = "~/Views/Shared/_Layout.cshtml"; }
}


<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            <label>Name RSRI</label>
        </th>
        <th>
            <label>Place RSRI</label> 
        </th>
        <th>
            <label>Department RSRI</label>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.realStateRegistryInterest_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.District.Region.City.State.state_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RealStateRegistryInterestDepartment.realStateRegistryInterestDepartments_name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.realStateRegistryInterest_id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.realStateRegistryInterest_id })
        </td>
    </tr>
}

</table>
