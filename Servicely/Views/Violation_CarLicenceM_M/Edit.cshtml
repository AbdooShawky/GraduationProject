@model Servicely.Models.Violation_CarLicenceM_M

@{
    ViewBag.Title = "Create";
    if (Session["Layout"] != null)
    { Layout = Session["Layout"].ToString(); }

    else
    { Layout = "~/Views/Shared/_Layout.cshtml"; }
}

<h4>@Servicely.Languages.Language.Create</h4>
<h4>@Servicely.Languages.Language.Violation</h4>

<div class="container">

</div>
@using (Html.BeginForm())
{


    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-3">
                <label>@Servicely.Languages.Language.CarCode</label>
                @Html.DropDownList("CarLicenceId", null, "", htmlAttributes: new { @class = "form-control", required = "required" })
                @Html.ValidationMessageFor(model => model.CarLicenceId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-3">
                <label>@Servicely.Languages.Language.Violation</label>
                @Html.DropDownList("ViolationId", null, "", htmlAttributes: new { @class = "form-control", required = "required" })
                @Html.ValidationMessageFor(model => model.ViolationId, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-3">
                <label>@Servicely.Languages.Language.Date</label>
                <input type="date" name="Date" required class="form-control" />

                @Html.ValidationMessageFor(model => model.ViolationId, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@Servicely.Languages.Language.Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink(Servicely.Languages.Language.Back_to_List, "Index")
</div>
