@model Servicely.Models.YearOfPhase

@{
    ViewBag.Title = "Create";
       if (Session["Layout"] != null)
    { Layout = Session["Layout"].ToString(); }

    else
    { Layout = "~/Views/Shared/_Layout.cshtml"; }
}


<h2>@Servicely.Languages.Language.Edit</h2>

@using (Html.BeginForm())
{
<div class="container">
    <h4>@Servicely.Languages.Language.YearOfPhase</h4>
    <hr />
    <div class="row">
        <div class="col-3">
            <label>@Servicely.Languages.Language.YearOfPhase</label>
            @Html.EditorFor(model => model.NameOfYearePhase, new { htmlAttributes = new { @class = "form-control", required = "required" } })

        </div>
        <div class="col-1"></div>
        <div class="col-3">
            <label> @Servicely.Languages.Language.YearOfPhase </label>
            @Html.EditorFor(model => model.NameOfYearePhaseArabic, new { htmlAttributes = new { @class = "form-control", required = "required" } })
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <label> @Servicely.Languages.Language.YearOfPhase </label>

            @Html.DropDownList("PhaseId", null, htmlAttributes: new { @class = "form-control" })

        </div>
    </div>
    @if (ViewBag.err != null)
    {
        <label class="text-danger mt-3">@ViewBag.err</label>
    }
    <div class="form-group mt-3">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="@Servicely.Languages.Language.Save" class="btn btn-default" />
        </div>
    </div>
</div>



}

<div>
    @Html.ActionLink(Servicely.Languages.Language.Back_to_List, "Index")
</div>
