@model Servicely.Models.Faculty

@{
    ViewBag.Title = "Delete";
   if (Session["Layout"] != null)
    { Layout = Session["Layout"].ToString(); }

    else
    { Layout = "~/Views/Shared/_Layout.cshtml"; }
}

<h3>@Servicely.Languages.Language.Delete</h3>
<h4>@Servicely.Languages.Language.Faculties</h4>
<h4>@Servicely.Languages.Language.Are_you_sure_you_want_to_delete_this_</h4>
<div>

    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Servicely.Languages.Language.Faculty
        </dt>
        @if (Session["lang"] != null)
        {
            if (Session["lang"].ToString().Equals("ar-EG"))
            {

                <dd>
                    @Html.DisplayFor(model => model.FacultyNameArabic)
                </dd>
            }
            else
            {
                <dd>
                    @Html.DisplayFor(model => model.FacultyName)
                </dd>
            }
        }
        else
        {
            <dd>
                @Html.DisplayFor(model => model.FacultyName)
            </dd>
        }

        <dt>@Servicely.Languages.Language.HowManyYear</dt>
        <dd>
            @Html.DisplayFor(a => a.Year)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="@Servicely.Languages.Language.Delete" class="btn btn-default" /> |
            @Html.ActionLink(Servicely.Languages.Language.Back_to_List, "Index")
        </div>
    }
</div>
