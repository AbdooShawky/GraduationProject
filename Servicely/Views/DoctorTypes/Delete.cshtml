@model Servicely.Models.DoctorType

@{
    ViewBag.Title = Servicely.Languages.Language.Delete;
     if (Session["Layout"] != null)
    { Layout = Session["Layout"].ToString(); }

    else
    { Layout = "~/Views/Shared/_Layout.cshtml"; }
}

    <div class="container">


        <h3>@Servicely.Languages.Language.Are_you_sure_you_want_to_delete_this_</h3>
        <div>
            <h4>@Servicely.Languages.Language.DoctorType</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    <label>@Servicely.Languages.Language.DoctorTypeName</label>
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.doctor_type_name)
                </dd>

               

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value=@Servicely.Languages.Language.Delete class="btn btn-default" /> |
                    @Html.ActionLink(Servicely.Languages.Language.Back_to_List, "Index")
                </div>
            }
        </div>
    </div>