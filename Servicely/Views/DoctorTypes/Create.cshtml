@model Servicely.Models.DoctorType

@{
    ViewBag.Title = Servicely.Languages.Language.Create;
    if (Session["Layout"] != null)
    { Layout = Session["Layout"].ToString(); }

    else
    { Layout = "~/Views/Shared/_Layout.cshtml"; }
}
    <div class="container">
      

        @using (Html.BeginForm())
        {


              <h2>@Servicely.Languages.Language.Create</h2>
    <div class="form-horizontal">
        <h4>@Servicely.Languages.Language.DoctorType</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-4">
                <label>@Servicely.Languages.Language.DoctorTypeName</label>
                @Html.EditorFor(model => model.doctor_type_name, new { htmlAttributes = new { @class = "form-control" ,required="required",pattern="([A-Z][a-z]{2,20}\\s[A-Z][a-z]{2,20})|([A-Z][a-z]{2,20}\\s[A-Z][a-z]{2,20}\\s[A-Z][a-z]{2,20})|([A-Z][a-z]{3,20})"} })
                @Html.ValidationMessageFor(model => model.doctor_type_name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-4">
                <label>@Servicely.Languages.Language.DoctorTypeName_inArabic</label>
                @Html.EditorFor(model => model.doctor_type_arabic_name, new { htmlAttributes =  new { @class = "form-control",required="required",pattern="([\u0600-\u06FF\\s]{3,20})" } })
                @Html.ValidationMessageFor(model => model.doctor_type_arabic_name, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value=@Servicely.Languages.Language.Create class="btn btn-default" />
            </div>
        </div>
    </div>
        }

        <div>
            @Html.ActionLink(Servicely.Languages.Language.Back_to_List, "Index")
        </div>
    </div>