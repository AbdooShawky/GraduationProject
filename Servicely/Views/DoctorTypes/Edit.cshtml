@model Servicely.Models.DoctorType

@{
    ViewBag.Title =Servicely.Languages.Language.Edit;
    if (Session["Layout"] != null)
    { Layout = Session["Layout"].ToString(); }

    else
    { Layout = "~/Views/Shared/_Layout.cshtml"; }
}
    <div class="container">
        

        @using (Html.BeginForm())
        {

        <div class="form-horizontal">
            <h4>@Servicely.Languages.Language.DoctorType</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.doctor_type_id)

            <div class="form-group">
                <div class="col-md-10">
                    <label@Servicely.Languages.Language.>@Servicely.Languages.Language.DoctorTypeName</label@Servicely.Languages.Language.>
                    @Html.EditorFor(model => model.doctor_type_name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.doctor_type_name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    <label@Servicely.Languages.Language.>@Servicely.Languages.Language.DoctorTypeName_inArabic</label@Servicely.Languages.Language.>
                    @Html.EditorFor(model => model.doctor_type_arabic_name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.doctor_type_arabic_name, "", new { @class = "text-danger" })
                </div>
            </div>



            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value=@Servicely.Languages.Language.Save class="btn btn-default" />
                </div>
            </div>
        </div>
        }

        <div>
            @Html.ActionLink(Servicely.Languages.Language.Back_to_List, "Index")
        </div>
    </div>