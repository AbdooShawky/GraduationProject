@model Servicely.Models.HealthCareSheduleM_M

@{
    ViewBag.Title = @Servicely.Languages.Language.Delete;
    if (Session["Layout"] != null)
        Layout = Session["Layout"].ToString();
    else
        Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h3>@Servicely.Languages.Language.AreyousureyouwanttodeletethisHealthCareSchedule</h3>
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                <label>@Servicely.Languages.Language.Appointemnts</label>
            </dt>
            <dd>
                @Model.ScheduleHealthCare.checkup_date.Value.ToShortDateString() &nbsp; <span> @Servicely.Languages.Language.From</span> &nbsp;@Model.ScheduleHealthCare.checkup_start.Value.Hours:@Model.ScheduleHealthCare.checkup_start.Value.Minutes<span>0</span> &nbsp;<span>@Servicely.Languages.Language.To</span>&nbsp;@Model.ScheduleHealthCare.checkup_end.Value.Hours:@Model.ScheduleHealthCare.checkup_end.Value.Minutes<span>0</span>

            </dd>
            @if (Session["lang"] != null)
            {
                if (Session["lang"].ToString().Equals("ar-EG"))
                {

                    <dt>
                        <label>@Servicely.Languages.Language.DoctorName</label>

                    </dt>
                    <dd>
                        @Model.Healthcare_Doctor.Citizen.citizen_first_name_arabic @Model.Healthcare_Doctor.Citizen.citizen_second_name_arabic  @Model.Healthcare_Doctor.Citizen.citizen_third_name_arabic  @Model.Healthcare_Doctor.Citizen.citizen_fourth_name_arabic
                    </dd>
                    <dt>
                        <label>@Servicely.Languages.Language.hospital_name</label>

                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.HealthCare.hospital_name_arabic)
                    </dd>

                    <dt>
                        <label>@Servicely.Languages.Language.Specialization</label>

                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Healthcare_Doctor.HealthCareSpecialization.specialization_name_arabic)
                    </dd>
                }
                else
                {
                    <dt>
                        <label>@Servicely.Languages.Language.DoctorName</label>

                    </dt>
                    <dd>
                        @Model.Healthcare_Doctor.Citizen.citizen_first_name @Model.Healthcare_Doctor.Citizen.citizen_second_name  @Model.Healthcare_Doctor.Citizen.citizen_third_name  @Model.Healthcare_Doctor.Citizen.citizen_fourth_name
                    </dd>
                    <dt>
                        <label>@Servicely.Languages.Language.hospital_name</label>

                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.HealthCare.hospital_name)
                    </dd>

                    <dt>
                        <label>@Servicely.Languages.Language.Specialization</label>

                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Healthcare_Doctor.HealthCareSpecialization.specialization_name)
                    </dd>
                }
            }
            else
            {
                <dt>
                    <label>@Servicely.Languages.Language.DoctorName</label>

                </dt>
                <dd>
                    @Model.Healthcare_Doctor.Citizen.citizen_first_name @Model.Healthcare_Doctor.Citizen.citizen_second_name  @Model.Healthcare_Doctor.Citizen.citizen_third_name  @Model.Healthcare_Doctor.Citizen.citizen_fourth_name
                </dd>
                <dt>
                    <label>@Servicely.Languages.Language.hospital_name</label>

                </dt>
                <dd>
                    @Html.DisplayFor(model => model.HealthCare.hospital_name)
                </dd>

                <dt>
                    <label>@Servicely.Languages.Language.Specialization</label>

                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Healthcare_Doctor.HealthCareSpecialization.specialization_name)
                </dd>
            }






        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="@Servicely.Languages.Language.Delete" class="btn btn-default" /> |
                @Html.ActionLink(@Servicely.Languages.Language.Back_to_List, "Index")
            </div>
        }
    </div>
</div>