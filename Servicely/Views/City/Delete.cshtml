@model Servicely.Models.City

@{
    ViewBag.Title = @Servicely.Languages.Language.Delete;
    if (Session["Layout"] != null)
    {
        Layout = Session["Layout"].ToString(); }

    else
    { Layout = "~/Views/Shared/_Layout.cshtml"; }
}

<div class="container-fluid">
    <h2>@Servicely.Languages.Language.Delete</h2>
    <div class="row mt-5">
        <div class="col-12">
            <h3>@Servicely.Languages.Language.Are_you_sure_you_want_to_delete_this_</h3>
        </div>

    </div>
    <h4>@Servicely.Languages.Language.City</h4>
    <div>

        <hr />
        <div class="row fadeIn">
            <div class="col-3">
                <dl class="dl-horizontal">
                    <dt>
                        <label>@Servicely.Languages.Language.City_Name</label>
                    </dt>

                    @if (Session["lang"] != null)
                    {
                        if (Session["lang"].ToString().Equals("ar-EG"))
                        {

                            <dd> @Html.DisplayFor(model => model.city_arabic_name)</dd>

                        }
                        else
                        {
                            <dd>
                                @Html.DisplayFor(model => model.city_name)
                            </dd>
                        }
                    }
                    else
                    {
                        <dd>
                            @Html.DisplayFor(model => model.city_name)
                        </dd>
                    }


                </dl>
            </div>
            <div class="col-3">

            </div>
        </div>
        <div class="row">
            @using (Html.BeginForm())
            {


                <div class="form-actions no-color">
                    <input type="submit" value=@Servicely.Languages.Language.Delete class="btn btn-default" /> |
                    @Html.ActionLink(Servicely.Languages.Language.Back_to_List, "Index")
                </div>
            }
        </div>
    </div>




</div>






