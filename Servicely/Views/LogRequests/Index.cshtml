@model IEnumerable<Servicely.Models.LogRequest>

@{
    ViewBag.Title =  Servicely.Languages.Language.Index;
     if (Session["Layout"] != null)
    { Layout = Session["Layout"].ToString(); }

    else
    { Layout = "~/Views/Shared/_Layout.cshtml"; }
}

<script>

    $(function () {

        $(document).ready(function () {

            $('#dtBasicExample').DataTable();
            $('.dataTables_length').addClass('bs-select');

        });
    });




</script>

<div class="container">
    <h2> @Servicely.Languages.Language.Index</h2>

    
    <hr />

    



    <div class="row mt-5 mb-5">
            
        <div class="col-12">
            <table id="dtBasicExample" class="table table-striped table-sm table-bordered" cellspacing="0" width="100%">


                <thead>
                    <tr>
                        <th class="th-sm">
                            @Servicely.Languages.Language.Transactioncode
                        </th>
                        <th class="th-sm">
                            @Servicely.Languages.Language.CitizenName
                        </th>
                        <th class="th-sm">
                            @Servicely.Languages.Language.CitizenNationalId
                        </th>
                        <th class="th-sm">
                            @Servicely.Languages.Language.log_date
                        </th>
                        <th class="th-sm">
                            @Servicely.Languages.Language.RequestType
                        </th>
                        <th class="th-sm">

                        </th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>



                        @if (Session["lang"] != null)
                        {
                            if (Session["lang"].ToString().Equals("ar-EG"))
                            {

                                <td>
                                    @item.log_requestId
                                </td>
                                <td>
                                    @item.Citizen.citizen_first_name_arabic @item.Citizen.citizen_second_name_arabic @item.Citizen.citizen_third_name_arabic @item.Citizen.citizen_fourth_name_arabic

                                </td>
                                <td>
                                    @item.Citizen.citizen_national_id
                                </td>
                                <td>
                                    @item.log_date
                                </td>
                                <td>
                                    @item.TypeRequest.typeReaquest_name_arabic
                                </td>

                            }
                            else
                            {
                                <td>
                                    @item.log_requestId
                                </td>
                                <td>
                                    @item.Citizen.citizen_first_name @item.Citizen.citizen_second_name @item.Citizen.citizen_third_name @item.Citizen.citizen_fourth_name

                                </td>
                                <td>
                                    @item.Citizen.citizen_national_id
                                </td>
                                <td>
                                    @item.log_date
                                </td>
                                <td>
                                    @item.TypeRequest.typeReaquest_name
                                </td>
                            }
                        }
                        else
                        {
                            <td>
                                @item.log_requestId
                            </td>
                            <td>
                                @item.Citizen.citizen_first_name @item.Citizen.citizen_second_name @item.Citizen.citizen_third_name @item.Citizen.citizen_fourth_name

                            </td>
                            <td>
                                @item.Citizen.citizen_national_id
                            </td>
                            <td>
                                @item.log_date
                            </td>
                            <td>
                                @item.TypeRequest.typeReaquest_name
                            </td>
                        }

                        <td>
                            @Html.ActionLink(Servicely.Languages.Language.Edit, "Edit", new { id = item.log_request_id }) |
                            @Html.ActionLink(Servicely.Languages.Language.Delete, "Delete", new { id = item.log_request_id })
                        </td>
                    </tr>
                    }
                </tbody>
            </table>

        </div>
                
            
        </div>
</div>



