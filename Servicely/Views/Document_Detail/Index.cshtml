@model IEnumerable<Servicely.Models.Document_Detail>

@{
    ViewBag.Title = "Index";
     if (Session["Layout"] != null)
    { Layout = Session["Layout"].ToString(); }

    else
    { Layout = "~/Views/Shared/_Layout.cshtml"; }
}
    <div class="container-fluid">
        <h2>Index</h2>

        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.document_detail_description)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Document.document_data)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Citizen.citizen_national_id)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.document_detail_description)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Document.document_data)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Citizen.citizen_national_id)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.document_detail_id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.document_detail_id })
                    </td>
                </tr>
            }

        </table>
    </div>

