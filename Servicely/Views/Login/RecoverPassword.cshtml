    <link href="~/AdminLTE-3.0.1/dist/css/@Servicely.Languages.Language.ApplicationDirection" rel="stylesheet" />
    <link href="~/js/@Servicely.Languages.Language.arabic_css" rel="stylesheet" />

    <link href="~/AdminLTE-3.0.1/plugins/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
    <!-- JQuery -->
    <script type="text/javascript" src="~/js/jquery-3.4.1.min.js"></script>
    <!-- Bootstrap tooltips -->
    <script src="~/AdminLTE-3.0.1/plugins/sweetalert2/sweetalert2.min.js"></script>
