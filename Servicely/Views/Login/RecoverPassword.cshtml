                                <form class="" action="/Login/RecoverPassword" method="post">
                                    <div class="form-row">
                                        <div class="col-md-12">
                                            <div class="position-relative form-group"><label for="exampleEmail" class="">Email</label><input name="email" id="exampleEmail" placeholder="Email here..." required type="email" class="form-control"></div>
                                        </div>
                                    </div>
                                    <div class="mt-4 d-flex align-items-center">
                                        <h6 class="mb-0"><a href="/Login/Index" class="text-primary">Sign in existing account</a></h6>
                                        <div class="ml-auto">
                                            <button  type="submit" class="btn btn-primary btn-lg active rounded" style="text-transform:capitalize">Recover Password</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>


                </div>
            </div>
        </div>

    </div>

