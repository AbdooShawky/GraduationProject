@model IEnumerable<Servicely.Models.VaccinationType>

@{
    ViewBag.Title = Servicely.Languages.Language.Index;
        if (Session["Layout"] != null)
    { Layout = Session["Layout"].ToString(); }

    else
    { Layout = "~/Views/Shared/_Layout.cshtml"; }
}
@*
<link href="~/css/addons/datatables.min.css" rel="stylesheet" />
<script src="~/js/addons/datatables.min.js"></script>
*@
<script>
    $(function () {


        
        $(document).ready(function () {
$('#dtBasicExample').DataTable();
$('.dataTables_length').addClass('bs-select');
});

    });

</script>

<div class="container mt-5">
    <div class="row mt-4">
        <div class="col-5">
            <h2>@Servicely.Languages.Language.List_of_vaccination_type</h2>
            <br />
            <p>
                @Html.ActionLink(@Servicely.Languages.Language.Create_New, "Create")
            </p>
        </div>
    </div>

    <div class="row mt-2">
        

        <div class="col-12">
            <table id="dtBasicExample" class="table table-striped table-sm table-bordered" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>
                            @Servicely.Languages.Language.vaccination_type_name
                        </th>
                        <th>
                            @Servicely.Languages.Language.vaccination_on_age
                        </th>
                        
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>

                        @if (Session["lang"] != null)
                        {
                            if (Session["lang"].ToString().Equals("ar-EG"))
                            {

                                <td>
                                    @Html.DisplayFor(modelItem => item.vaccination_type_name_arabic)
                                </td>



                            }
                            else
                            {
                                <td>
                                    @Html.DisplayFor(modelItem => item.vaccination_type_name)
                                </td>


                            }
                        }
                        else
                        {
                            <td>
                                @Html.DisplayFor(modelItem => item.vaccination_type_name)
                            </td>

                        }


                        <td>
                            @Html.DisplayFor(modelItem => item.vaccination_type_period)
                        </td>

                        <td>
  
                            <a href='/VaccinationTypes/Edit/@item.vaccination_type_id'> <i class="far fa-edit"></i></a>
                            |
                            <a href ='/VaccinationTypes/Delete/@item.vaccination_type_id'><i class="far fa-trash-alt"></i></a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>


