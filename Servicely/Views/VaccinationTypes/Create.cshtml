@model Servicely.Models.VaccinationType

@{
    ViewBag.Title = Servicely.Languages.Language.Create;
        if (Session["Layout"] != null)
    { Layout = Session["Layout"].ToString(); }

    else
    { Layout = "~/Views/Shared/_Layout.cshtml"; }
}







  
    
   
       
    <div class="container-fluid mt-5">
        @using (Html.BeginForm())
        {
            <h4>@Servicely.Languages.Language.VaccinationType</h4>
            <hr />
            <div class="row">
                <div class="col-4">

                    <div class="form-group">
                        <label for="vaccination_type_name">@Servicely.Languages.Language.vaccination_type_name_inEnglish</label>

                        @Html.EditorFor(model => model.vaccination_type_name, new { htmlAttributes = new { @class = "form-control", required = "required" ,pattern="([A-Za-z\\s]{2,25})" } })
                    </div>
                </div>

                    <div class="form-group">
                        <div class="col-12">
                            <label for="vaccination_type_name">@Servicely.Languages.Language.vaccination_type_name_inArabic</label>

                            @Html.EditorFor(model => model.vaccination_type_name_arabic, new { htmlAttributes = new { @class = "form-control", required = "required", pattern="([\u0600-\u06FF\\s]{2,25})"} })
                        </div>
                    </div>


                <div class="col-6">

                </div>
            </div>
            <div class=col-3>
               
                    <div class="form-group">
                        <label for="vaccination_type_period">@Servicely.Languages.Language.vaccination_type_age -  @Servicely.Languages.Language.day</label><br />
                        @Html.EditorFor(model => model.vaccination_type_period, new { htmlAttributes = new { @class = "form-control", required = "required", min = "3", max = "1000" } })
                    </div>

                 
                </div>
            
            <div class="row">
                <div class="col-3">
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value=@Servicely.Languages.Language.Create class="btn btn-default" />
                        </div>
                    </div>

                </div>
                @if (ViewBag.errmsg != null)
                {
                    <label class="text-danger font-weight-bold">@ViewBag.errmsg</label>
                }



            </div>
            <div class="mt-3 mb-5">
                @Html.ActionLink(Servicely.Languages.Language.Back_to_List, "Index")
            </div>
        }
    </div>
        

        

        

       
    



