@model Servicely.Models.UniversityFacultyM_M

@{
    ViewBag.Title = "Create";
        if (Session["Layout"] != null)
    { Layout = Session["Layout"].ToString(); }

    else
    { Layout = "~/Views/Shared/_Layout.cshtml"; }
}

<h3>@Servicely.Languages.Language.Create</h3>
<div class="container">
    @using (Html.BeginForm())
    {
    <h4>@Servicely.Languages.Language.University-@Servicely.Languages.Language.Faculty</h4>
        <hr />

        <div class="row ">
            <div class="col-md-3">
                <label>@Servicely.Languages.Language.Universities</label> 
                @Html.DropDownList("UniversityId", null,"", htmlAttributes: new { @class = "form-control", required="required" })
                @Html.ValidationMessageFor(model => model.UniversityId, "", new { @class = "text-danger" })

            </div>
        </div>
        <div class="row mt-3">
            <div class="col-md-3">
                <label>@Servicely.Languages.Language.Faculties</label>
                @Html.DropDownList("FacultyId", null,"", htmlAttributes: new { @class = "form-control", required="required" })
                @Html.ValidationMessageFor(model => model.FacultyId, "", new { @class = "text-danger" })

            </div>
        </div>




            <div class="form-group">
                @if( ViewBag.UniversityFaculty != null)
                {
                    <label class="mt-3 mb-3 text-danger">@ViewBag.UniversityFaculty </label>
                }
                <div class="col-md-offset-2 col-md-10 mt-2">
                    <input type="submit" value="@Servicely.Languages.Language.Create" class="btn btn-default" />
                </div>
            </div>
      
    }

    <div>
        @Html.ActionLink(Servicely.Languages.Language.Back_to_List, "Index")
    </div>
</div>

