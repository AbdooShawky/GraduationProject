@model Servicely.Models.UploadPhotos

@{
    ViewBag.Title = Servicely.Languages.Language.Create;
       if (Session["Layout"] != null)
    { Layout = Session["Layout"].ToString(); }

    else
    { Layout = "~/Views/Shared/_Layout.cshtml"; }
}


<script>
    $(function () {

        $("#Photo_citizen_id").select2();


    });
</script>
<h2>@Servicely.Languages.Language.Create</h2>

<div class="container">
    @using (Html.BeginForm("Create", "Photos", FormMethod.Post, new { enctype = "multipart/form-data" }))

    {
        <h4>@Servicely.Languages.Language.Photo</h4>
        <hr />
        <div class="row">
            <div class="col-md-3">

                <label class="label">@Servicely.Languages.Language.NationalId</label>
                @Html.DropDownList("Photo_citizen_id", null, "", htmlAttributes: new { @class = "form-control" })
               
            </div>
            <div class="col-md-5">
                @Html.ValidationMessageFor(model => model.Photo_citizen_id, "", new { @class = "text-danger" })

            </div>
        </div>
        <div class="row mt-4">
            <div class="col-md-5">
                <label class="lable">Upload Photo</label>
                <div class="custom-file">
                    <input type="file" class="custom-file-input" id="customFileLangHTML" name="f1">
                    <label class="custom-file-label" for="customFileLangHTML" data-browse="Upload">

                    </label>
                </div>
            </div>
        </div>







        <div class="form-group mt-3">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>

    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>

</div>
