@model IEnumerable<Servicely.Models.Violation>

@{
    ViewBag.Title = "Index";
     if (Session["Layout"] != null)
    { Layout = Session["Layout"].ToString(); }

    else
    { Layout = "~/Views/Shared/_Layout.cshtml"; }
}

<h4>@Servicely.Languages.Language.Index</h4>
<h4>@Servicely.Languages.Language.Violation</h4>

<p>
    @Html.ActionLink(Servicely.Languages.Language.Create_New, "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Servicely.Languages.Language.ViolationName
        </th>
        <th>
            @Servicely.Languages.Language.ViolationPrice
        </th>
     
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    @if (Session["lang"] != null)
    {
        if (Session["lang"].ToString().Equals("ar-EG"))
        {

            <td>
                @Html.DisplayFor(modelItem => item.ViolationNameArabic)
            </td>
        }
        else
        {
            <td>
                @Html.DisplayFor(modelItem => item.ViolationName)
            </td>
        }
    }
    else
    {
        <td>
            @Html.DisplayFor(modelItem => item.ViolationName)
        </td>
    }

    <td>
        @Html.DisplayFor(modelItem => item.ViolationPrice)
    </td>

    <td>

        <a  href='/Violations/Edit/@item.Id'> <i class="far fa-edit"></i></a>
        |
        <a  href='/Violations/Delete/@item.Id'><i class="far fa-trash-alt"></i></a>
    </td>
</tr>
}

</table>
