@model Servicely.Models.Violation

@{
    ViewBag.Title = "Create";
        if (Session["Layout"] != null)
    { Layout = Session["Layout"].ToString(); }

    else
    { Layout = "~/Views/Shared/_Layout.cshtml"; }
}

    <div class="container">
        <h4>@Servicely.Languages.Language.Create</h4>
        <h4>@Servicely.Languages.Language.Violation</h4>
        @using (Html.BeginForm())
        {

            <hr />
            <div class="row mt-3">
                <div class="col-md-3">
                    <label>@Servicely.Languages.Language.ViolationNameInEng</label>
                    @Html.EditorFor(model => model.ViolationName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ViolationName, "", new { @class = "text-danger", required = "required", pattern = "(([A-Za-z\\s]){2,25})" })
                </div>
                <div class="col-md-1">

                </div>
                <div class="col-md-3">
                    <label>@Servicely.Languages.Language.ViolationNameInAr</label>
                    @Html.EditorFor(model => model.ViolationNameArabic, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ViolationName, "", new { @class = "text-danger", required = "required", pattern = "([\u0600-\u06FF\\s]{3,20})" })
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-md-3">
                    <label>@Servicely.Languages.Language.ViolationPrice</label>
                    @Html.EditorFor(model => model.ViolationPrice, new { htmlAttributes = new { @class = "form-control", type = "number", min = "1", required = "required" } })
                    @Html.ValidationMessageFor(model => model.ViolationPrice, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group mt-3">
                @if (ViewBag.errorMessage != null)
                {
                    <label class="mt-3 mb-3 text-danger">@ViewBag.errorMessage</label>
                }
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="@Servicely.Languages.Language.Create" class="btn btn-default" />
                </div>
            </div>
        }

        <div>
            @Html.ActionLink(Servicely.Languages.Language.Back_to_List, "Index")
        </div>


    </div>
 