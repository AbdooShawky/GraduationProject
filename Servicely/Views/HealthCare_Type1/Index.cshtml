@model IEnumerable<Servicely.Models.HealthCare_Type>

@{
    ViewBag.Title = @Servicely.Languages.Language.Index;
    if( Session["Layout"] != null)
       Layout = Session["Layout"].ToString();
    else
        Layout = "~/Views/Shared/_Layout.cshtml";
   

}
    <div class="container-fluid">
        <h2>@Servicely.Languages.Language.Index</h2>
         <h2>@Servicely.Languages.Language.HealthCare_type</h2>
        <p>
            @Html.ActionLink( Servicely.Languages.Language.Create_New, "Create")
        </p>
        <table class="table">
            <tr>
                <th>
                    @Servicely.Languages.Language.healthcare_type_name
                </th>
              
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
        <tr>


            @if (Session["lang"] != null)
            {
                if (Session["lang"].ToString().Equals("ar-EG"))
                {

                    <td>
                        @Html.DisplayFor(modelItem => item.healthcare_type_name_arabic)
                    </td>



                }
                else
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.healthcare_type_name)
                    </td>


                }
            }
            else
            {
                <td>
                    @Html.DisplayFor(modelItem => item.healthcare_type_name)
                </td>

            }

            <td>
                @Html.ActionLink(@Servicely.Languages.Language.Edit, "Edit", new { id = item.healthcare_type_id }) |

                @Html.ActionLink(@Servicely.Languages.Language.Delete, "Delete", new { id = item.healthcare_type_id })
            </td>
        </tr>
            }

        </table>
    </div>

