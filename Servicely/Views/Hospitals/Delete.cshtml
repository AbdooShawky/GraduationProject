@model Servicely.Models.HealthCare

@{
    ViewBag.Title =  Servicely.Languages.Language.Delete;
     if (Session["Layout"] != null)
    { Layout = Session["Layout"].ToString(); }

    else
    { Layout = "~/Views/Shared/_Layout.cshtml"; }
}

    <h2> @Servicely.Languages.Language.Delete</h2>

    <h3> @Servicely.Languages.Language.Are_you_sure_you_want_to_delete_this_</h3>
    <div>
        <h4> @Servicely.Languages.Language.Hospital</h4>
        <hr />

        @if (Session["lang"] != null)
        {
            if (Session["lang"].ToString().Equals("ar-EG"))
            {
                <div class="row">
                    <div class="col-md-4">
                        <dl class="dl-horizontal">
                            <dt>
                                @Servicely.Languages.Language.Healthcare
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.hospital_name_arabic)
                            </dd>



                            <dt>
                                @Servicely.Languages.Language.District_Name
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.District.district_arabic_name)
                            </dd>

                        </dl>
                    </div>
                    <div class="col-md-4">
                        <dl class="dl-horizontal">
                            <dt>
                                @Servicely.Languages.Language.Region
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.District.Region.region_arabic_name)
                            </dd>



                            <dt>
                                @Servicely.Languages.Language.City
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.District.Region.City.city_arabic_name)
                            </dd>

                        </dl>
                    </div>
                    <div class="col-md-4">
                        <dl class="dl-horizontal">




                            <dt>
                                @Servicely.Languages.Language.State
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.District.Region.City.State.state_arabic_name)
                            </dd>
                            <dt>
                                @Servicely.Languages.Language.healthcare_type_name
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.HealthCare_Type.healthcare_type_name_arabic)
                            </dd>

                        </dl>
                    </div>
                </div>

            }
            else
            {
                <div class="row">
                    <div class="col-md-4">
                        <dl class="dl-horizontal">
                            <dt>
                                @Servicely.Languages.Language.hospital_name
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.hospital_name)
                            </dd>



                            <dt>
                                @Servicely.Languages.Language.District_Name
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.District.district_name)
                            </dd>

                        </dl>
                    </div>
                    <div class="col-md-4">
                        <dl class="dl-horizontal">
                            <dt>
                                @Servicely.Languages.Language.Region
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.District.Region.region_name)
                            </dd>



                            <dt>
                                @Servicely.Languages.Language.City
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.District.Region.City.city_name)
                            </dd>

                        </dl>
                    </div>
                    <div class="col-md-4">
                        <dl class="dl-horizontal">




                            <dt>
                                @Servicely.Languages.Language.State
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.District.Region.City.State.state_name)
                            </dd>
                            <dt>
                                @Servicely.Languages.Language.healthcare_type_name
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.HealthCare_Type.healthcare_type_name)
                            </dd>
                        </dl>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="row">
                <div class="col-md-4">
                    <dl class="dl-horizontal">
                        <dt>
                            @Servicely.Languages.Language.hospital_name
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.hospital_name)
                        </dd>



                        <dt>
                            @Servicely.Languages.Language.District_Name
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.District.district_name)
                        </dd>

                    </dl>
                </div>
                <div class="col-md-4">
                    <dl class="dl-horizontal">
                        <dt>
                            @Servicely.Languages.Language.Region
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.District.Region.region_name)
                        </dd>



                        <dt>
                            @Servicely.Languages.Language.City
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.District.Region.City.city_name)
                        </dd>

                    </dl>
                </div>
                <div class="col-md-4">
                    <dl class="dl-horizontal">




                        <dt>
                            @Servicely.Languages.Language.State
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.District.Region.City.State.state_name)
                        </dd>
                        <dt>
                            @Servicely.Languages.Language.healthcare_type_name
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.HealthCare_Type.healthcare_type_name)
                        </dd>
                    </dl>
                </div>
            </div>
        }



        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value=@Servicely.Languages.Language.Delete class="btn btn-default" /> |
                @Html.ActionLink(Servicely.Languages.Language.Back_to_List, "Index")
            </div>
        }
    </div>
