@model IEnumerable<Servicely.Models.HealthCare>

@{
    ViewBag.Title =  Servicely.Languages.Language.Index;
     if (Session["Layout"] != null)
    { Layout = Session["Layout"].ToString(); }

    else
    { Layout = "~/Views/Shared/_Layout.cshtml"; }
}

    <h2> @Servicely.Languages.Language.Index</h2>

<p>
    @Html.ActionLink( @Servicely.Languages.Language.Create_New, "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Servicely.Languages.Language.hospital_name
        </th>
        <th>
            @Servicely.Languages.Language.healthcare_type_name
        </th>
        <th>
            @Servicely.Languages.Language.District_Name
        </th>
        <th>
            @Servicely.Languages.Language.Region
        </th>
        <th>
            @Servicely.Languages.Language.City
        </th>
        <th>
            @Servicely.Languages.Language.State
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>

    @if (Session["lang"] != null)
    {
        if (Session["lang"].ToString().Equals("ar-EG"))
        {
            <td>
                @Html.DisplayFor(modelItem => item.hospital_name_arabic)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HealthCare_Type.healthcare_type_name_arabic)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.District.district_arabic_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.District.Region.region_arabic_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.District.Region.City.city_arabic_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.District.Region.City.State.state_arabic_name)
            </td>

        }
        else
        {
            <td>
                @Html.DisplayFor(modelItem => item.hospital_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HealthCare_Type.healthcare_type_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.District.district_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.District.Region.region_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.District.Region.City.city_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.District.Region.City.State.state_name)
            </td>
        }
    }
    else
    {
        <td>
            @Html.DisplayFor(modelItem => item.hospital_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HealthCare_Type.healthcare_type_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.District.district_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.District.Region.region_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.District.Region.City.city_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.District.Region.City.State.state_name)
        </td>
    }

    <td>
        @Html.ActionLink(Servicely.Languages.Language.Edit, "Edit", new { id = item.hospital_id }) |

        @Html.ActionLink(@Servicely.Languages.Language.Delete, "Delete", new { id = item.hospital_id })
    </td>
</tr>
}

</table>
