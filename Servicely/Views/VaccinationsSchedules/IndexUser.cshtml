@model IEnumerable<Servicely.Models.VaccinationReservation>
@{
    ViewBag.Title = Servicely.Languages.Language.IndexUser;
    Layout = "~/Views/Shared/userlayout.cshtml";
}

<script>
    $(function () {
        $(document).ready(function () {

            $('#dtBasicExample').DataTable();

            $('.dataTables_length').addClass('bs-select');

        });


    });
</script>
<div class="container-fluid">
    <h2>@Servicely.Languages.Language.Index</h2>
    <div class="row">
        <div class="col-12">
            <table id="dtBasicExample" class="table table-striped table-sm table-bordered" cellspacing="0" width="100%">

                <thead>
                    <tr>
                        <th class="th-sm">
                            @Servicely.Languages.Language.CitizenNationalId
                        </th>
                        <th class="th-sm">
                            @Servicely.Languages.Language.Name
                        </th>
                        <th class="th-sm">
                            @Servicely.Languages.Language.Date
                        </th>
                        <th class="th-sm">
                            @Servicely.Languages.Language.Healthcare
                        </th>
                        <th class="th-sm">
                            @Servicely.Languages.Language.Address
                        </th>
                        <th class="th-sm">
                            @Servicely.Languages.Language.VaccinationType
                        </th>
                        <th class="th-sm">
                            @Servicely.Languages.Language.Checked
                        </th>
                        <th>

                        </th>



                        @*<th class="th-sm">   </th>
                            <th class="th-sm">   </th>*@
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>



                        @if (Session["lang"] != null)
                        {
                            if (Session["lang"].ToString().Equals("ar-EG"))
                            {

                                <td>@item.Citizen.citizen_national_id</td>
                                <td>@item.Citizen.citizen_first_name_arabic @item.Citizen.citizen_second_name_arabic @item.Citizen.citizen_third_name_arabic @item.Citizen.citizen_fourth_name_arabic</td>
                                <td>@item.VaccReservation_date.Value.ToShortDateString()</td>
                                <td>@item.HealthCare.hospital_name_arabic</td>
                                <td>@item.HealthCare.District.Region.City.State.state_arabic_name <br /> @item.HealthCare.District.Region.City.city_arabic_name <br /> @item.HealthCare.District.Region.region_arabic_name <br /> @item.HealthCare.District.district_arabic_name</td>
                                <td>@item.VaccinationType.vaccination_type_name_arabic</td>
                                <td>@item.VaccReservation_checked</td>


                            }
                            else
                            {

                                <td>@item.Citizen.citizen_national_id</td>
                                <td>@item.Citizen.citizen_first_name @item.Citizen.citizen_second_name @item.Citizen.citizen_third_name @item.Citizen.citizen_fourth_name</td>
                                <td>@item.VaccReservation_date.Value.ToShortDateString()</td>
                                <td>@item.HealthCare.hospital_name</td>
                                <td>@item.HealthCare.District.Region.City.State.state_name <br /> @item.HealthCare.District.Region.City.city_name <br /> @item.HealthCare.District.Region.region_name <br /> @item.HealthCare.District.district_name</td>
                                <td>@item.VaccinationType.vaccination_type_name</td>
                                <td>@item.VaccReservation_checked</td>


                            }
                        }
                        else
                        {

                            <td>@item.Citizen.citizen_national_id</td>
                            <td>@item.Citizen.citizen_first_name @item.Citizen.citizen_second_name @item.Citizen.citizen_third_name @item.Citizen.citizen_fourth_name</td>
                            <td>@item.VaccReservation_date.Value.ToShortDateString()</td>
                            <td>@item.HealthCare.hospital_name</td>
                            <td>@item.HealthCare.District.Region.City.State.state_name <br /> @item.HealthCare.District.Region.City.city_name <br /> @item.HealthCare.District.Region.region_name <br /> @item.HealthCare.District.district_name</td>
                            <td>@item.VaccinationType.vaccination_type_name</td>
                            <td>@item.VaccReservation_checked</td>

                        }


                    <td>
                        <a href="/VaccinationsSchedules/DeleteUser/@item.VaccReservation_id"><i class="fa fa-trash-alt"></i></a>
                    </td>

                    </tr>
                    }

                </tbody>


            </table>
        </div>
    </div>
</div>

