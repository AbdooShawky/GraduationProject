                        </button>
                    </div>
                    <div class="modal-body">
                        <label>@ViewBag.vcc</label>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">@Servicely.Languages.Language.Close</button>

                    </div>
                </div>
            </div>
        </div>

    }



