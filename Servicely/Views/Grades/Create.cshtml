@model Servicely.Models.Grade

@{
    ViewBag.Title = "Create";
     if (Session["Layout"] != null)
    { Layout = Session["Layout"].ToString(); }

    else
    { Layout = "~/Views/Shared/_Layout.cshtml"; }
}

<h2>@Servicely.Languages.Language.Create</h2>
<div class="container">

    @using (Html.BeginForm())
    {
        <h4>Grade</h4>
        <hr />
        <div class="row">
            <div class="col-md-3">
                <label>garde Name in English</label>
                @Html.EditorFor(model => model.GradeName, new { htmlAttributes = new { @class = "form-control" , required = "required" , pattern = "(([A-Za-z\\s]){2,50})" } })
                @Html.ValidationMessageFor(model => model.GradeName, "", new { @class = "text-danger" })

            </div>
            <div class="col-md-1"></div>
            <div class="col-md-3">
                <label>garde Name in Arabic</label>
                @Html.EditorFor(model => model.GradeNameArabic, new { htmlAttributes = new { @class = "form-control" , required = "required", pattern = "([\u0600-\u06FF\\s]{3,30})"} })
                @Html.ValidationMessageFor(model => model.GradeNameArabic, "", new { @class = "text-danger" })

            </div>
        </div>


        <div class="row mt-3">
            <div class="col-md-3">
                <label>Grade Percentage</label>
                @Html.EditorFor(model => model.GradePrecentage, new { htmlAttributes = new { @class = "form-control", required = "required"  } })
                @Html.ValidationMessageFor(model => model.GradePrecentage, "", new { @class = "text-danger" })

            </div>
        </div>


            

           


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    @if(ViewBag.GardeErr != true)
                    {
                        <label class="text-danger mt-3 mb-3">@ViewBag.GardeErr</label>
                    }
                    <input type="submit" value="@Servicely.Languages.Language.Create" class="btn btn-default" />
                </div>
            </div>
        
    }

    <div>
        @Html.ActionLink(Servicely.Languages.Language.Back_to_List, "Index")
    </div>
</div>

