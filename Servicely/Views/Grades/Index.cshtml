@model IEnumerable<Servicely.Models.Grade>

@{
    ViewBag.Title = "Index";
    if (Session["Layout"] != null)
    { Layout = Session["Layout"].ToString(); }

    else
    { Layout = "~/Views/Shared/_Layout.cshtml"; }
}

<h2>@Servicely.Languages.Language.Index</h2>

<p>
    @Html.ActionLink(Servicely.Languages.Language.Create_New, "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.GradeName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GradePrecentage)
        </th>
       
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.GradeName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GradePrecentage)
        </td>
       
        <td>
            <a href='/Grades/Edit/@item.Id'> <i class="far fa-edit"></i></a>
            |
            <a href ='/Grades/Delete/@item.Id'><i class="far fa-trash-alt"></i></a>
        </td>
    </tr>
}

</table>
