@model Servicely.Models.SchoolCertificateM_M

@{
    ViewBag.Title = "Create";
        if (Session["Layout"] != null)
    { Layout = Session["Layout"].ToString(); }

    else
    { Layout = "~/Views/Shared/_Layout.cshtml"; }
}

<h2>@Servicely.Languages.Language.Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
        <hr />

        <div class="form-group">
            <label>@Servicely.Languages.Language.School</label>
            <div class="col-md-3">
                @Html.DropDownList("SchoolId", null, htmlAttributes: new { @class = "form-control" ,required="required" })
                @Html.ValidationMessageFor(model => model.SchoolId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CertificateId, "CertificateId", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.DropDownList("CertificateId", null, htmlAttributes: new { @class = "form-control",required="required" })
                @Html.ValidationMessageFor(model => model.CertificateId, "", new { @class = "text-danger" })
            </div>
        </div>

       <div class="text-danger mt-3">
           @if(ViewBag.errorMessage  != null)
           {
               @ViewBag.errorMessage 
           }
       </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@Servicely.Languages.Language.Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink(Servicely.Languages.Language.Back_to_List, "Index")
</div>
