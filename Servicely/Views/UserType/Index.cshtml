@model IEnumerable<Servicely.Models.User_Type>

@{
    ViewBag.Title = Servicely.Languages.Language.Index;
       if (Session["Layout"] != null)
    { Layout = Session["Layout"].ToString(); }

    else
    { Layout = "~/Views/Shared/_Layout.cshtml"; }
}

<script></script>




<div class="container-fluid">
    <h3>@Servicely.Languages.Language.Index</h3>
    <h3>@Servicely.Languages.Language.UserType</h3>
    <p>
        @Html.ActionLink(Servicely.Languages.Language.Create_New, "Create")
    </p>

    <div class="row">
        <div class="col-12">
            <table class="table">
                <tr>


                    <th class="font-weight-bold">
                        @Servicely.Languages.Language.user_type_name
                    </th>

                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>


                        @if (Session["lang"] != null)
                        {
                            if (Session["lang"].ToString().Equals("ar-EG"))
                            {

                                <td>
                                    @Html.DisplayFor(modelItem => item.user_type_name_arabic)
                                </td>



                            }
                            else
                            {
                                <td>
                                    @Html.DisplayFor(modelItem => item.user_type_name)
                                </td>


                            }
                        }
                        else
                        {
                            <td>
                                @Html.DisplayFor(modelItem => item.user_type_name)
                            </td>

                        }


                        <td>

                            @Html.ActionLink(Servicely.Languages.Language.Edit, "Edit", new { id = item.user_type_id }, htmlAttributes: new { style = "color:blue" }) |
                            @Html.ActionLink(Servicely.Languages.Language.Delete, "Delete", new { id = item.user_type_id }, htmlAttributes: new { style = "color:blue" })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>



</div>