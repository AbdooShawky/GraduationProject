<script>
    $(function () {

           var seesion;
        $.ajax({
            url: "/Addresses/Sessionvalue",
            data: "",
            async:false,
            success: function (res) {
                 
                seesion = res;

            }
        });
        if (seesion == "ar-EG") {

            $("#document_citizen_id").change(function () {

                var data = $("#document_citizen_id").val();
