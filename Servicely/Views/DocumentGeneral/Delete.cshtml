@model Servicely.Models.Document

@{
    ViewBag.Title = @Servicely.Languages.Language.Delete;
    if (Session["Layout"] != null)
        Layout = Session["Layout"].ToString(); 
    else
     Layout = "~/Views/Shared/_Layout.cshtml"; 
}

<div class="container-fluid">

    <h2>@Servicely.Languages.Language.Delete</h2>

    <h3>@Servicely.Languages.Language.Are_you_sure_you_want_to_delete_this_</h3>

    <h4>@Servicely.Languages.Language.Document</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Servicely.Languages.Language.CitizenNationalId
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Citizen.citizen_national_id)
        </dd>

        <dt>
            @Servicely.Languages.Language.Document
        </dt>

        <dd>
            @Html.DisplayFor(model => model.document_name)
        </dd>
        <dt>
            @Servicely.Languages.Language.UploadDate
        </dt>
        <dd>
            @Html.DisplayFor(model => model.document_date_upload)
        </dd>
        <dt>
            @Servicely.Languages.Language.document_type_name
        </dt>


        @if (Session["lang"] != null)
        {
            if (Session["lang"].ToString().Equals("ar-EG"))
            {
                <dd>
                    @Html.DisplayFor(model => model.Document_Type.document_type_name_arabic)
                </dd>


            }
            else
            {
                <dd>
                    @Html.DisplayFor(model => model.Document_Type.document_type_name)
                </dd>

            }
        }
        else
        {


            <dd>
                @Html.DisplayFor(model => model.Document_Type.document_type_name)
            </dd>

        }




        <dt>
            @Servicely.Languages.Language.document_extensions
        </dt>

        <dd>
            @Html.DisplayFor(model => model.document_extensions)
        </dd>


    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value=@Servicely.Languages.Language.Delete class="btn btn-default" /> |
            @Html.ActionLink(Servicely.Languages.Language.Back_to_List, "Index")
        </div>
    }

</div>


