@model Servicely.Models.Document

@{
    ViewBag.Title = Servicely.Languages.Language.Edit;
     if (Session["Layout"] != null)
    { Layout = Session["Layout"].ToString(); }

    else
    { Layout = "~/Views/Shared/_Layout.cshtml"; }
}

    <h2>@Servicely.Languages.Language.Edit</h2>

@using (Html.BeginForm())
{


    <div class="form-horizontal">
        <h4>@Servicely.Languages.Language.Document</h4>
        <hr />

        <div class="form-group">
            <label> @Servicely.Languages.Language.CitizenNationalId</label>
            <div class="col-md-3">
                @*@Html.EditorFor(model => model.Citizen.citizen_national_id, new { htmlAttributes = new { @class = "form-control", required = "required"  } })*@
                @Html.DisplayFor(a=> a.Citizen.citizen_national_id)
                @Html.HiddenFor(model => model.Citizen.citizen_id)

                <input  type="hidden" value=""/>
            </div>
        </div>
        <div class="form-group">
            <label> @Servicely.Languages.Language.DocumentType</label>
            <div class="col-md-3">
                @Html.DropDownList("document_documentType_id", null, htmlAttributes: new { @class = "form-control" })

            </div>
        </div>

        @Html.HiddenFor(model => model.document_id)

        <div class="form-group">
            @Html.LabelFor(model => model.document_data, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.EditorFor(model => model.document_data, new { htmlAttributes = new { @class = "form-control", required = "required" } })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.document_name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-3" id="divInput">

                @Html.EditorFor(model => model.document_name, new { htmlAttributes = new { @class = "form-control", required = "required" } })




            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.document_extensions, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-3" id="divInput">

                @Html.EditorFor(model => model.document_extensions, new { htmlAttributes = new { @class = "form-control", required = "required" } })




            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value=@Servicely.Languages.Language.Save class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink(Servicely.Languages.Language.Back_to_List, "Index")
</div>
