@model Servicely.Models.HealthCareSpecialization

@{
    ViewBag.Title =Servicely.Languages.Language.Create;
        if (Session["Layout"] != null)
    { Layout = Session["Layout"].ToString(); }

    else
    { Layout = "~/Views/Shared/_Layout.cshtml"; }
}

    <div class="container">

        @using (Html.BeginForm())
        {
           

        <div class="form-horizontal">
            <h3>@Servicely.Languages.Language.Create</h3>
            <h4>@Servicely.Languages.Language.NewSpecializationType</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">

                <div class="col-md-4">
                    <label>@Servicely.Languages.Language.Specialization_Name_inEnglish</label>
                    @Html.EditorFor(model => model.specialization_name, new { htmlAttributes = new { @class = "form-control", required = "required", pattern = "([A-Z][a-z\\s]{2,20}" } })
                    @Html.ValidationMessageFor(model => model.specialization_name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">

                <div class="col-md-4">
                    <label>@Servicely.Languages.Language.Specialization_name_inArabic</label>
                    @Html.EditorFor(model => model.specialization_name_arabic, new { htmlAttributes = new { @class = "form-control", required = "required", pattern = "([\u0600-\u06FF\\s]{3,20})" } })
                    @Html.ValidationMessageFor(model => model.specialization_name_arabic, "", new { @class = "text-danger" })
                </div>
            </div>

            @if (ViewBag.msg != null)
            {
                <label class="text-danger">@ViewBag.msg</label>
            }

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="@Servicely.Languages.Language.Create" class="btn btn-default" />
                </div>
            </div>
        </div>
        }

        <div>
            @Html.ActionLink(Servicely.Languages.Language.Back_to_List, "Index")
        </div>
    </div>