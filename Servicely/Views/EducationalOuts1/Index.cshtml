@model IEnumerable<Servicely.Models.EducationalOut>

@{
    ViewBag.Title = "Index";
     if (Session["Layout"] != null)
    { Layout = Session["Layout"].ToString(); }

    else
    { Layout = "~/Views/Shared/_Layout.cshtml"; }
}

<h2>@Servicely.Languages.Language.Index</h2>
<h4>@Servicely.Languages.Language.EducatedAbroad</h4>
<hr />
<p>
    @Html.ActionLink(Servicely.Languages.Language.Create_New, "Create")
</p>
<table class="table table-hover mt-3" >
    <tr>
        <th>
            @Servicely.Languages.Language.Students
        </th>

        <th>
            @Servicely.Languages.Language.NationalId
        </th>
        <th>
            @Servicely.Languages.Language.Document
        </th>

        <th>
            @Servicely.Languages.Language.Date
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    @if (Session["lang"] != null)
    {
        if (Session["lang"].ToString().Equals("ar-EG"))
        {
            <td>
                @item.Citizen.citizen_first_name_arabic @item.Citizen.citizen_second_name_arabic @item.Citizen.citizen_third_name_arabic @item.Citizen.citizen_fourth_name_arabic
            </td>

        }
        else
        {
            <td>
                @item.Citizen.citizen_first_name @item.Citizen.citizen_second_name @item.Citizen.citizen_third_name @item.Citizen.citizen_fourth_name
            </td>
        }
    }
    else
    {
        <td>
            @item.Citizen.citizen_first_name @item.Citizen.citizen_second_name @item.Citizen.citizen_third_name @item.Citizen.citizen_fourth_name
        </td>
    }


    <td>
        @Html.DisplayFor(modelItem => item.Citizen.citizen_national_id)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DocumentName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Date)
    </td>

    <td>
        <a href="/EducationalOuts1/Edit/@item.Id"><i class="far fa-edit"></i></a> |
        <a href="/EducationalOuts1/Delete/@item.Id"><i class="far fa-trash-alt"></i></a>

    </td>
</tr>
}

</table>
