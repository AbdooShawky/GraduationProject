@model IEnumerable<Servicely.Models.Office>

@{
    ViewBag.Title =  Servicely.Languages.Language.Index;
       if (Session["Layout"] != null)
    { Layout = Session["Layout"].ToString(); }

    else
    { Layout = "~/Views/Shared/_Layout.cshtml"; }
}

    <div class="container-fluid">
        <h2> @Servicely.Languages.Language.Index</h2>

        <p>
            @Html.ActionLink( Servicely.Languages.Language.Create_New, "Create")
        </p>
        <table class="table">
            <tr>
                <th>
                    @Servicely.Languages.Language.OfficeName
                </th>

                <th>
                    @Servicely.Languages.Language.District_Name
                </th>
                <th>
                    @Servicely.Languages.Language.governement_name
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
        <tr>
            @if (Session["lang"] != null)
            {
                if (Session["lang"].ToString().Equals("ar-EG"))
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.office_name_arabic)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.District.district_arabic_name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.governement_body.governement_name_arabic)
                    </td>

                }
                else
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.office_name)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.District.district_name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.governement_body.governement_name)
                    </td>
                }
            }
            else
            {
                <td>
                    @Html.DisplayFor(modelItem => item.office_name)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.District.district_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.governement_body.governement_name)
                </td>
            }

            <td>
                @Html.ActionLink(Servicely.Languages.Language.Edit, "Edit", new { id = item.office_id }) |

                @Html.ActionLink(@Servicely.Languages.Language.Delete, "Delete", new { id = item.office_id })
            </td>
        </tr>
            }

        </table>


    </div>


