@model IEnumerable<Servicely.Models.UniversityStudentM_M>

@{
    ViewBag.Title = "Index";
       if (Session["Layout"] != null)
    { Layout = Session["Layout"].ToString(); }

    else
    { Layout = "~/Views/Shared/_Layout.cshtml"; }
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        
        <th>
            @Servicely.Languages.Language.Date
        </th>
        <th>
            @Servicely.Languages.Language.Student
        </th>
        <th>
            @Html.DisplayNameFor(model => model.University.UniversityName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>

    @if (Session["lang"] != null)
    {
        if (Session["lang"].ToString().Equals("ar-EG"))
        {

            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @item.Student.Citizen.citizen_first_name_arabic @item.Student.Citizen.citizen_second_name_arabic @item.Student.Citizen.citizen_third_name_arabic @item.Student.Citizen.citizen_fourth_name_arabic
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.University.UniversityNameArabic)
            </td>
        }
        else
        {
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @item.Student.Citizen.citizen_first_name @item.Student.Citizen.citizen_second_name @item.Student.Citizen.citizen_third_name @item.Student.Citizen.citizen_fourth_name
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.University.UniversityName)
            </td>
        }
    }
    else
    {
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @item.Student.Citizen.citizen_first_name @item.Student.Citizen.citizen_second_name @item.Student.Citizen.citizen_third_name @item.Student.Citizen.citizen_fourth_name
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.University.UniversityName)
        </td>
    }


    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |

        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
    </td>
</tr>
}

</table>
