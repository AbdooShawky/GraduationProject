@model Servicely.Models.Document_Type

@{
    ViewBag.Title = Servicely.Languages.Language.Edit;
     if (Session["Layout"] != null)
    { Layout = Session["Layout"].ToString(); }

    else
    { Layout = "~/Views/Shared/_Layout.cshtml"; }
}

    <h2>@Servicely.Languages.Language.Edit</h2>

@using (Html.BeginForm())
{
   
    
<div class="form-horizontal">
    <h4>@Servicely.Languages.Language.DocumentType</h4>
    <hr />
    @Html.HiddenFor(a=>a.document_type_id)
    <div class="form-group">
        <div class="col-md-4">
            <label for="document_type_name">@Servicely.Languages.Language.document_type_name</label>
            @Html.EditorFor(model => model.document_type_name, new { htmlAttributes = new { @class = "form-control", Pattern = "([A-Z][a-z]{2,20}\\s[A-Z][a-z]{2,20})|([A-Z][a-z]{2,20}\\s[A-Z][a-z]{2,20}\\s[A-Z][a-z]{2,20})|([A-Z][a-z]{3,20})", required = "required" } })


        </div>
    </div>

    <div class="form-group">
        <div class="col-md-4">
            <label for="document_type_name">@Servicely.Languages.Language.document_type_name_inArabic</label>
            @Html.EditorFor(model => model.document_type_name_arabic, new { htmlAttributes = new { @class = "form-control", Pattern = "[\u0600-\u06FF\\s]{3,20}$", required = "required" } })


        </div>
    </div>

    <div class="form-group">
        <div class="col-md-5">
            <label for="document_type_description">@Servicely.Languages.Language.documentt_type_description</label>
            @Html.EditorFor(model => model.document_type_description, new { htmlAttributes = new { @class = "form-control", Pattern = "^[a-zA-Z\\s]{3,30}$", required = "required" } })


        </div>
    </div>

    <div class="form-group">
        <div class="col-md-5">
            <label for="document_type_description">@Servicely.Languages.Language.documentt_type_description_inArabic</label>
            @Html.EditorFor(model => model.document_type_description_arabic, new { htmlAttributes = new { @class = "form-control", Pattern = "[\u0600-\u06FF\\s]{3,20}$", required = "required" } })


        </div>
    </div>

    <div class="form-group">
        <div class="col-md-5">
            @if (ViewBag.errMsg != null)
            {
                <label style="color:red"> @ViewBag.errMsg </label>
            }

        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value=@Servicely.Languages.Language.Save class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink(Servicely.Languages.Language.Back_to_List, "Index")
</div>
